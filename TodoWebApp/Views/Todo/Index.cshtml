@model List<TodoWebApp.Models.TodoItem>

@{
    ViewData["Title"] = "待辦事項清單";
}

<div class="row">
    <div class="col-md-12">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h2>@ViewData["Title"]</h2>
            <a asp-action="Create" class="btn btn-primary">新增待辦事項</a>
        </div>

        @if (Model == null || !Model.Any())
        {
            <div class="alert alert-info">
                目前沒有待辦事項。點擊「新增待辦事項」按鈕來建立第一個項目。
            </div>
        }
        else
        {
            <div class="list-group">
                @foreach (var item in Model)
                {
                    <div class="list-group-item">
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="form-check flex-grow-1">
                                <form asp-action="ToggleComplete" asp-route-id="@item.Id" method="post" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <input type="checkbox" 
                                           class="form-check-input" 
                                           @(item.IsCompleted ? "checked" : "")
                                           onchange="this.form.submit()">
                                    <label class="form-check-label @(item.IsCompleted ? "text-decoration-line-through text-muted" : "")">
                                        @item.Title
                                    </label>
                                </form>
                            </div>
                            <div class="btn-group" role="group">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">編輯</a>
                                <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline" 
                                      onsubmit="return confirm('確定要刪除此待辦事項嗎？');">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-sm btn-outline-danger">刪除</button>
                                </form>
                            </div>
                        </div>
                        <small class="text-muted">建立時間: @item.CreatedDate.ToString("yyyy-MM-dd HH:mm")</small>
                    </div>
                }
            </div>

            <div class="mt-3">
                <p class="text-muted">
                    總計: @Model.Count 個項目 | 
                    已完成: @Model.Count(t => t.IsCompleted) 個 | 
                    未完成: @Model.Count(t => !t.IsCompleted) 個
                </p>
            </div>
        }
    </div>
</div>
